<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/default_background"
  tools:context=".MainActivity"
  tools:deviceIds="tv">

  <FrameLayout
    android:id="@+id/main_browse_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <TextView
    android:id="@+id/user_badge"
    android:layout_width="52dp"
    android:layout_height="52dp"
    android:layout_gravity="end|top"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="64dp"
    android:gravity="center"
    android:textSize="22sp"
    android:textColor="#FFFFFF"
    android:background="@drawable/user_badge_background"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:elevation="8dp"
    android:nextFocusDown="@id/main_browse_fragment"
    android:nextFocusLeft="@id/main_browse_fragment"
    android:nextFocusUp="@id/main_browse_fragment"
    android:text="?" />

  <FrameLayout
    android:id="@+id/playback_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:focusable="false" />

</FrameLayout>