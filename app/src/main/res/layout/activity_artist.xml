<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/default_background"
  tools:context=".artist.ArtistActivity"
  tools:deviceIds="tv">

  <fragment
    android:id="@+id/artist_title"
    android:name="fr.bonamy.tidalstreamer.artist.ArtistTitleFragment"
    android:layout_width="match_parent"
    android:layout_height="@dimen/artist_banner_height" />

  <FrameLayout
    android:id="@+id/artist_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/arist_content_vertical_offset"
    android:focusedByDefault="true" />

  <FrameLayout
    android:id="@+id/playback_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:focusable="false" />

</FrameLayout>